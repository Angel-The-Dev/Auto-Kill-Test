local MainWindow = loadstring(game:HttpGet("https://raw.githubusercontent.com", true))():AddWindow("                                   RK SCRIPT PAID | PUBLIC ", {
    main_color = Color3.fromRGB(170, 150, 85),
    min_size = Vector2.new(600, 400),
    can_resize = false,
    scrollable = true
})

-- INFO TAB
local InfoTab = MainWindow:AddTab("INFO")
InfoTab:AddLabel("WELCOME TO RK HUB")
InfoTab:AddLabel("OWNER: xXD3ATHKINGXx & Angel")
local OwnerLabel = InfoTab:AddLabel("xXD3ATHKINGXx & Angel")
task.spawn(function()
    while true do
        OwnerLabel.TextColor3 = Color3.fromHSV(tick() * 0.22 % 1, 0.8, 1)
        task.wait(0.02)
    end
end)
InfoTab:AddButton("Copy Discord Invite", function()
    setclipboard("https://discord.gg")
end)

-- FARMING TAB
local FarmTab = MainWindow:AddTab("Farming")

FarmTab:AddButton("Quick Rebirth", function()
    -- Start of the Rebirth Logic
    local a = game:GetService("ReplicatedStorage")
    local b = game:GetService("Players")
    local vInput = game:GetService("VirtualInputManager")
    local c = b.LocalPlayer

    -- Function to unequip all pets
    local d = function()
        local f = c:WaitForChild("petsFolder")
        for _, h in pairs(f:GetChildren()) do 
            if h:IsA("Folder") then 
                for _, j in pairs(h:GetChildren()) do 
                    a.rEvents.equipPetEvent:FireServer("unequipPet", j)
                end 
            end 
        end
        task.wait(.1)
    end

    -- Function to equip a specific pet
    local k = function(l)
        d()
        task.wait(.01)
        local unique = c.petsFolder:FindFirstChild("Unique")
        if unique then
            for _, n in pairs(unique:GetChildren()) do 
                if n.Name == l then 
                    a.rEvents.equipPetEvent:FireServer("equipPet", n)
                    break
                end 
            end 
        end
    end

    -- Find a machine in workspace
    local o = function(p)
        local q = workspace:FindFirstChild("machinesFolder") and workspace.machinesFolder:FindFirstChild(p)
        if not q then 
            for _, s in pairs(workspace:GetChildren()) do 
                if s:IsA("Folder") and s.Name:lower():find("machines") then 
                    q = s:FindFirstChild(p)
                    if q then break end 
                end 
            end 
        end
        return q 
    end

    -- Simulate pressing 'E'
    local t = function()
        vInput:SendKeyEvent(true, Enum.KeyCode.E, false, game)
        task.wait(.1)
        vInput:SendKeyEvent(false, Enum.KeyCode.E, false, game)
    end

    -- Main Auto-Rebirth Loop
    task.spawn(function()
        print("RK HUB: Auto-Rebirth Activated")
        while true do 
            local v = c.leaderstats.Rebirths.Value
            local w = 10000 + (5000 * v)
            
            if c:FindFirstChild("ultimatesFolder") and c.ultimatesFolder:FindFirstChild("Golden Rebirth") then 
                local x = c.ultimatesFolder["Golden Rebirth"].Value
                w = math.floor(w * (1 - (x * 0.1)))
            end
            
            k("Swift Samurai")
            
            -- Training Loop
            while c.leaderstats.Strength.Value < w do 
                for y = 1, 10 do 
                    c.muscleEvent:FireServer("rep")
                end
                task.wait(0.1) -- Prevents crashing
            end
            
            k("Tribal Overlord")
            
            -- Use Machine
            local z = o("Jungle Bar Lift")
            if z and z:FindFirstChild("interactSeat") then 
                c.Character:PivotTo(z.interactSeat.CFrame * CFrame.new(0, 3, 0))
                repeat 
                    task.wait(.2)
                    t()
                until c.Character.Humanoid.Sit or c.leaderstats.Rebirths.Value > v
            end
            
            -- Rebirth
            local A = c.leaderstats.Rebirths.Value
            repeat 
                a.rEvents.rebirthRemote:InvokeServer("rebirthRequest")
                task.wait(.5)
            until c.leaderstats.Rebirths.Value > A
            
            task.wait(1)
        end 
    end)
end)
